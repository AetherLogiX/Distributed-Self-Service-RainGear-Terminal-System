CompileFlags:
  # Use the compile_commands.json generated by CMake (build/qt-release).
  CompilationDatabase: build/qt-release
  Add:
    # Silence MSVC compatibility noise on Windows clangd.
    - -fms-compatibility
    - -fms-extensions

Diagnostics:
  # Keep it quiet about missing includes if the database is still loading.
  MissingIncludes: Strict

